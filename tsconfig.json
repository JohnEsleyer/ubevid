{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "bun",
      "node"
    ]
  },
  "include": [
    "lib/**/*",
    "sketches/**/*"
  ]
}